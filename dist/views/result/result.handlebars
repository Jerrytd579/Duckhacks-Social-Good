<main class="result">

<h1>"Bias Results!"</h1>

{{#if errors}}
  <article class="error">
    <h2>Error!</h2>
    <p>No word was entered to check!</p>
  </article>
{{else}}

{{#if score}}
  <article class="success">
    <p>Results of analysis</p>
    <p>Score: {{score}}</p>
    <p>Description: {{text}}</p>
  </article>
  
{{/if}}
{{/if}}

<a id= "link" href="/">Try another link/a>
</main>
